#!/usr/bin/env bash

# bin/compile <build-dir> <cache-dir>

set -e

BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

pwd; ls -la

cd $BUILD_DIR

pwd; ls -la

if [ -f "Makefile" ]; then
    echo "-----> Makefile found"
    make CACHE_DIR=$CACHE_DIR
    echo "-----> Compilation done"
else
    echo "-----> No Makefile found.Compilation cannot continue."
    exit 1
fi
